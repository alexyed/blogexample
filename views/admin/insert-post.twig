{% extends "layaout.twig" %}

{% block content %}
	<h2>Posts</h2>
	<p>
		<a class="btn btn-outline-secondary" href="{{ 'admin/post' | url }}">Back</a>
		
	</p>
	{% if result %}
		<div class="alert alert-success">Post Saved</div>
	{% endif%}

	<form method="post">
		<div class="form-group">
			<label for="inputTitle">Title</label>
			<input class="form-control" type="text" name="title" id="inputTitle">
		</div>
		<textarea class="form-control" name="content" id="inputContent" rows="5"></textarea>
		<br>
		<input type="submit" class="btn btn-outline-primary" name="" value="Save">
	</form>

{% endblock %}
