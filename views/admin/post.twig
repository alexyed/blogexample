{% extends "layaout.twig" %}

{% block content %}
	<h2>Posts</h2>
	<a class="btn btn-outline-primary" href="{{ 'admin/post/create' | url }}">New Post</a>
	<table class="table">
		<caption>Table content blogs</caption>
		<thead>
			<tr>
				<th>Title</th>
				<th>Edit</th>
				<th>Delete</th>
			</tr>
		</thead>
		<tbody>
			{% for blogPost in blogPosts %}
				<tr>
					<td> {{ blogPost.title }} </td>
					<td>Edit</td>
					<td>Delete</td>
				</tr>

			{% endfor %}
		</tbody>
	</table>

{% endblock %}